{
  "name": "@luxcore/backend",
  "version": "1.0.0",
  "description": "LuxCore Backend - Node.js API with NovaSanctum security integration",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "ts-node prisma/seed.ts",
    "db:reset": "prisma migrate reset",
    "db:studio": "prisma studio",
    "db:push": "prisma db push",
    "docs:generate": "typedoc src/**/*.ts --out docs",
    "docs:serve": "npx http-server docs -p 8080",
    "clean": "rimraf dist",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "novas Sanctum:setup": "ts-node scripts/novas Sanctum-setup.ts",
    "novas Sanctum:test": "ts-node scripts/novas Sanctum-test.ts"
  },
  "keywords": [
    "luxcore",
    "backend",
    "api",
    "express",
    "typescript",
    "prisma",
    "postgresql",
    "novas Sanctum",
    "security",
    "authentication",
    "authorization"
  ],
  "author": "LuxCore Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "uuid": "^9.0.1",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "axios": "^1.6.2",
    "redis": "^4.6.10",
    "ioredis": "^5.3.2",
    "socket.io": "^4.7.4",
    "prisma": "^5.7.1",
    "@prisma/client": "^5.7.1",
    "zod": "^3.22.4",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.10.4",
    "typedi": "^0.10.0",
    "swagger-ui-express": "^5.0.0",
    "swagger-jsdoc": "^6.2.8",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "express-session": "^1.17.3",
    "connect-redis": "^7.1.0",
    "cookie-parser": "^1.4.6",
    "express-async-errors": "^3.1.1",
    "express-winston": "^4.2.0",
    "express-status-monitor": "^1.3.4",
    "express-pino-logger": "^7.0.0",
    "pino": "^8.17.2",
    "pino-pretty": "^10.2.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/nodemailer": "^6.4.14",
    "@types/uuid": "^9.0.7",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.10.5",
    "@types/passport": "^1.0.16",
    "@types/passport-jwt": "^3.0.13",
    "@types/passport-local": "^1.0.38",
    "@types/express-session": "^1.17.10",
    "@types/cookie-parser": "^1.4.6",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/swagger-jsdoc": "^6.0.4",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "prettier": "^3.1.1",
    "typedoc": "^0.25.7",
    "rimraf": "^5.0.5",
    "cross-env": "^7.0.3",
    "@faker-js/faker": "^8.4.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "config": {
    "novas Sanctum": {
      "version": "1.0.0",
      "security": {
        "jwt": {
          "algorithm": "HS256",
          "expiresIn": "24h",
          "refreshExpiresIn": "7d"
        },
        "bcrypt": {
          "rounds": 12
        },
        "rateLimit": {
          "windowMs": 900000,
          "max": 100
        },
        "session": {
          "secret": "process.env.SESSION_SECRET",
          "resave": false,
          "saveUninitialized": false,
          "cookie": {
            "secure": true,
            "httpOnly": true,
            "maxAge": 86400000
          }
        }
      }
    }
  }
} 