{
  "name": "@luxcore/frontend",
  "version": "1.0.0",
  "description": "LuxCore Frontend - React application with NovaSanctum security integration",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "format": "prettier --write src/**/*.{ts,tsx,css,md}",
    "format:check": "prettier --check src/**/*.{ts,tsx,css,md}",
    "type-check": "tsc --noEmit",
    "docs:generate": "typedoc src/**/*.ts src/**/*.tsx --out docs",
    "docs:serve": "npx http-server docs -p 3001",
    "clean": "rimraf dist",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "novas Sanctum:test": "vitest --run src/services/novas Sanctum.test.ts"
  },
  "keywords": [
    "luxcore",
    "frontend",
    "react",
    "typescript",
    "vite",
    "novas Sanctum",
    "security",
    "authentication",
    "ui",
    "ux"
