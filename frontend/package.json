  "config": {
    "novas Sanctum": {
      "version": "1.0.0",
      "security": {
        "authentication": {
          "tokenStorage": "httpOnly-cookies",
          "refreshToken": true,
          "autoLogout": true
        },
        "api": {
          "baseUrl": "process.env.VITE_API_URL",
          "timeout": 10000,
          "retryAttempts": 3
        },
        "cors": {
          "origin": "process.env.VITE_FRONTEND_URL",
          "credentials": true
        }
      }
    }
  }
